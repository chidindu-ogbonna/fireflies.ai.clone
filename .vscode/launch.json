{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run dev",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeVersion": "22",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "run script",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeVersion": "22",
            "runtimeArgs": [
                "tsx",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
            "cwd": "${workspaceFolder}"
        },
    ]
}